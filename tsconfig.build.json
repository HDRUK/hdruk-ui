{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,

    "noEmit": false,

    "incremental": false,           // <-- important for DTS
    "isolatedModules": false        // tsc handles types for dts; tsup handles bundling
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
